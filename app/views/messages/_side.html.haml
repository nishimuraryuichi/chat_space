.chat-side
  .side-header
    .side-header__box
      .side-header__box__user-name
        = current_user.name
      .side-header__box__menu
        .side-header__box__menu__edit-user
          %i.fa.fa-edit
        .side-header__box__menu__new-group
          = link_to edit_user_path(current_user) do
            = fa_icon 'cog', class: 'icon'
  .groups
    %a
      .group
        .group__group-name
          a
        .group__latest-message
          aaa
